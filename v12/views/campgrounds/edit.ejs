<%- include('../partials/header') %>


    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" name="">
                <div class="form-group">
                    <input type="text" name="campground[name]" placeholder="name" class="form-control" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" class="form-control">
                <div class="form-group">
                    <input type="text" name="campground[image]" placeholder="image url" class="form-control" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[description]" placeholder="description" class="form-control" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-primary btn-block">
                </div>                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>  
    </div>


<%- include('../partials/footer') %>